        div(class="row")
            div(class='cell-sm-4')
                img(height="413px" width="100%" src="https://promociondescuentos.com/wp-content/uploads/2017/03/innovasport-cupon-descuento-ropa-calzado-mujeres-ninas-300x200.jpg")
            div(class='cell-sm-4')
                img(height="413px" width="100%" src="https://ofertadescuentos.com/wp-content/uploads/2018/12/Innovasport-descuento-en-todo-el-calzado-OFFDE.jpg")
            div(class='cell-sm-4')
