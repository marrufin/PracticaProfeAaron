extends /layouts/main

block styles
    style(type="text/css").
           .row.lead.garantias,
           .carousel-div{
	        border-top:3px solid #DDD;
	        border-bottom:3px solid #DDD;
	        padding: 20px 0;
	        margin-bottom: 15px;
	        margin-top: 20px;
           }
           @media (max-width: 768px){
           	.row.lead.garantias .col-sm-4{
               	font-size: 20px;
               	margin: 10px 0;
           	}
           }
           
