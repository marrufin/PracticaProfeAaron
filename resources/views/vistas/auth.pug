    script.
        $.ajaxSetup({
          headers: {
              'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
          }
        });

        $.validator.setDefaults({
            highlight: function(element) {
                $(element).closest('.form-md').addClass('mdb-error');
                $(element).closest('.form-md').removeClass('has-feedback').addClass('mdb-error has-feedback');
                
            },
              unhighlight: function(element) {
                 $(element).closest('.form-md').removeClass('mdb-error');
                 $(element).closest('.form-md').addClass('');
              },
              errorElement: 'span',
              errorClass: 'mdb-error',
              errorPlacement: function(error, element) {
                if (element.parent('.fg-line').length){ 
                  error.insertAfter(element.parent())
                }
                else if (element.is(':radio')) { 
                  error.css({display: 'block', "margin-top": '16px'})
                  $(element).parent().parent().append(error)
                }
                else if (element.is(':file')){ 
                  error.insertAfter(element.parent().parent().parent())
                }
                else {error.insertAfter(element)};
              }
            });

        $('.h-menu').children().children().hover(function(){
            $(this).css('background-color', "#bd2211")
        }, function(){
            $(this).css('background-color', "black")
        })
        toastr.options = {
          "positionClass": 'toast-bottom-right'
        }

        $('.suscribe').on('click', () => {
            if($('#email-suscribe').val() !== ""){
                $.ajax({
                    url:'/login',
                    type: 'PUT',
                    data: {email:$('#email-suscribe').val()},
                    datatype:"json"
                    }).
                    done((response) => {
                        toastr.success(response.message)
                        
                    }).
                    fail((error) => {
                        toastr.info("Algo salió mal")
                    });
                }
    
            })
